<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.mamh.hibernate.demo.entities.HbWorkEntity" table="hb_work" schema="atguigu">
        <id name="hbId">
            <column name="hb_id" sql-type="int(11)"/>
        </id>
        <property name="hbName">
            <column name="hb_name" sql-type="varchar(1024)" length="1024"/>
        </property>
        <property name="hbMonthlyPay">
            <column name="hb_monthly_pay" sql-type="int(11)" not-null="true"/>
        </property>
        <property name="hbYearPay">
            <column name="hb_year_pay" sql-type="int(11)" not-null="true"/>
        </property>
        <property name="hbVacation">
            <column name="hb_vacation" sql-type="int(11)" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>