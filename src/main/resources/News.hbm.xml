<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.mamh.hibernate.demo.entities">

    <class  name="News" table="hb_news" schema="atguigu" select-before-update="true" dynamic-update="true">
        <id name="id">
            <column name="hb_id" sql-type="int(11)"/>
            <!--指定主键的生成方法，native使用数据库本地方式，mysql就是自动增长的数字-->
            <generator class="hilo"/>
        </id>
        <property name="title" type="string" update="true" index="hb_title">
            <column name="hb_title"  length="1024" not-null="true" unique="true" />
        </property>


        <property name="author" index="tile_author_index">
            <column name="hb_author" sql-type="varchar(2048)" length="2048" not-null="true"/>
        </property>
        <property name="date">
            <column name="hb_date" sql-type="datetime" not-null="true"/>
        </property>

        <property name="desc" formula="(select concat(author, ': ', title) from hb_news)"/>

    </class>
</hibernate-mapping>